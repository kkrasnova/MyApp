@model IEnumerable<MyApp.Models.Order>
@using System.Globalization

<h1>Замовлення</h1>

<p>
    <a asp-action="Create">Створити нове</a>
</p>

<table>
    <thead>
        <tr>
            <th>Користувач</th>
            <th>Продукт</th>
            <th>Дата замовлення</th>
            <th>Загальна сума</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.User.Username</td>
                <td>@order.Product.Name</td>
                <td>@order.OrderDate.ToString("dd.MM.yyyy")</td> <!-- Форматирование даты -->
                <td>@order.TotalAmount.ToString("C", CultureInfo.CurrentCulture)</td> <!-- Форматирование суммы -->
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
