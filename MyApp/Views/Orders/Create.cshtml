@model MyApp.Models.Order

<h1>Створити замовлення</h1>

<form asp-action="Create">
    <div>
        <label asp-for="UserId">Користувач:</label>
        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "Id", "Username"))"></select>
    </div>
    <div>
        <label asp-for="ProductId">Продукт:</label>
        <select asp-for="ProductId" asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))"></select>
    </div>
    <div>
        <label asp-for="OrderDate">Дата замовлення:</label>
        <input asp-for="OrderDate" type="date" />
    </div>
    <div>
        <label asp-for="TotalAmount">Загальна сума:</label>
        <input asp-for="TotalAmount" />
    </div>
    <button type="submit">Створити</button>
</form>
