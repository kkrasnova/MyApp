@model IEnumerable<MyApp.Models.User>

<h1>Користувачі</h1>

<p>
    <a asp-action="Create">Створити нового</a>
</p>

<table>
    <thead>
        <tr>
            <th>Ім'я користувача</th>
            <th>Електронна пошта</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>